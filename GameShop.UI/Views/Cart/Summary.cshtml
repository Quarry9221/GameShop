@model GameShop.Domain.Entities.Cart

<div class="navbar-right">
    @Html.ActionLink("Order", "Index", "Cart",
    new { ReturnUrl = Request.Url.PathAndQuery },
    new { @class = "btn btn-success navbar-btn" })
</div>
<div class="navbar-right">
    <button type="button" class="btn btn-danger navbar-btn"onClick='location.href="https://localhost:44317/Akkount/Login"'>Admin panel
    </button>
</div>


<div class="navbar-text navbar-right">
    <b style="color: white">
        Your cart:
        @Model.Lines.Sum(x => x.Count) games,
        @Model.CalculateValue().ToString("# dollars")
    </b>
</div>