@model IEnumerable<GameShop.Domain.Entities.Game>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <h2 style="width">Admin panel</h2>
    @Html.ActionLink("Home", "List", "Game", null,
new { @class = "btn btn-grey btn-lg" })
</div>


<div class="panel panel-default">
    <div class="panel-heading">
        <h3>List of games</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Name</th>
                <th class="text-right">Price</th>
                <th class="text-center">Option</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.Id</td>
                    <td>@Html.ActionLink(item.Name, "Edit", new { item.Id })</td>
                    <td class="text-right">@item.Price.ToString("# dollars")</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Admin"))
                        {
                            @Html.Hidden("Id", item.Id)
                            <input type="submit"
                                   class="btn btn-default btn-xs"
                                   value="Delete" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add game", "Create", null,
            new { @class = "btn btn-default" })
    </div>
    <div>

    </div>

</div>


</table>
